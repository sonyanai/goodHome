            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="要望"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/requestTextView"
            android:text=""/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="変更"
            android:id="@+id/customerChangeButton"
            android:layout_marginBottom="50dp"/>



    </LinearLayout>

</ScrollView>
